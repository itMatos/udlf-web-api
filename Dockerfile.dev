FROM --platform=linux/amd64 node:20-alpine

# Install bash and other dependencies
RUN apk add --no-cache bash

WORKDIR /app

# Copy package files and install dependencies first (for better caching)
COPY package*.json ./
RUN npm install

# Copy UDLF binary
COPY ./udlf /app/udlf

# Make UDLF executable
RUN chmod +x /app/udlf/bin/udlf

# Create necessary directories
RUN mkdir -p /app/outputs /app/uploads

# Copy TypeScript configuration
COPY tsconfig.json ./

# Copy source code
COPY src ./src

# Set environment variables
ENV NODE_ENV=development
ENV API_MODE=demo
ENV GCS_BUCKET_NAME=udlf_web_datasets
ENV GCS_PROJECT_ID=udlf-api-project-1759206589

EXPOSE 8080

# Use nodemon for hot-reload in development
CMD ["npm", "run", "dev"]

